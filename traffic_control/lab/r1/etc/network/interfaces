######################################################################
# /etc/network/interfaces -- configuration file for ifup(8), ifdown(8)

auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
     address 11.0.0.1
     network 11.0.0.0
     netmask 255.255.255.0

auto eth1
iface eth1 inet static
     address 13.0.0.1
     network 13.0.0.0
     netmask 255.255.255.0
     gateway 13.0.0.3

