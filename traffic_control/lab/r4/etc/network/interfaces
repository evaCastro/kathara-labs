######################################################################
# /etc/network/interfaces -- configuration file for ifup(8), ifdown(8)

auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
     address 15.0.0.4
     network 15.0.0.0
     netmask 255.255.255.0
     gateway 15.0.0.3

auto eth1
iface eth1 inet static
     address 16.0.0.4
     network 16.0.0.0
     netmask 255.255.255.0

